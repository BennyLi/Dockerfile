upstream redmine {
	server 127.0.0.1:3000;
	server 127.0.0.1:3001;
	server 127.0.0.1:3002;
}

map $uri $blogname{
	~^(?P<blogpath>/[^/]+/)files/(.*)	$blogpath ;
}
 
map $blogname $blogid{
	default -999;
 
	#Ref: http://wordpress.org/extend/plugins/nginx-helper/
	#include /var/www/wordpress/wp-content/plugins/nginx-helper/map.conf ;
}

server {
	listen			443 ssl;
	ssl			on;
	ssl_certificate 	/etc/nginx/certs/server.chained.crt;
	ssl_certificate_key 	/etc/nginx/certs/server.key;
	server_name		benny-li.de;
	index 			index.html index.php;
	root			/var/www;

	error_log /var/log/nginx/debug.log debug;

	include sites-available/wordpress-multi.conf;
	include sites-available/horde.conf;
	include sites-available/ttrss.conf;
	include sites-available/redmine.conf;
}
